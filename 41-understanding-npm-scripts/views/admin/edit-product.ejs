<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
    <form class="product-form" action="/admin/<%= editing === 'true' ? 'edit-product' : 'add-product' %>" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= editing === 'true' ? product.title : '' %>">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%= editing === 'true' ? product.imageUrl : '' %>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= editing === 'true' ? product.price : '' %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><%= editing === 'true' ? product.description : '' %></textarea>
        </div>

        <button class="btn" type="submit"><%= editing === 'true' ? 'Update Product' : 'Add Product' %></button>
    </form>
</main>

<%- include('../includes/end.ejs') %>